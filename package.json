{
  "name": "dadlife",
  "version": "1.0.0",
  "description": "Social media app for Dads and jokes",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ruffmantom/DadLife.git"
  },
  "author": "Tom Ruff",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ruffmantom/DadLife/issues"
  },
  "homepage": "https://github.com/Ruffmantom/DadLife#readme",
  "dependencies": {
    "concurrently": "^5.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
